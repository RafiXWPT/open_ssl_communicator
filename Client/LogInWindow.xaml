<Window x:Class="Client.LogInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Log-in" Height="300" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="programIcon.ico" Loaded="Window_Loaded" Background="#FFCDCDCD">
    <Grid>
        <Image x:Name="image" HorizontalAlignment="Center" Height="106" Margin="0,10,0,0" VerticalAlignment="Top" Width="185" Source="programLogo.png" Stretch="Fill"/>

        <Label x:Name="loginLabel" Content="Login:" Height="30" HorizontalAlignment="Left" Margin="48,121,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center"/>
        <Label x:Name="passwordLabel" Content="Password:" Height="30" HorizontalAlignment="Left" Margin="28,156,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center"/>

        <TextBox x:Name="loginBox" HorizontalAlignment="Left" Height="30" Margin="95,121,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Height="30" Width="120" Margin="95,156,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button x:Name="confirmBtn" Content="Confirm" HorizontalAlignment="Left" Margin="95,191,0,0" VerticalAlignment="Top" Width="120" Height="30" Click="confirmBtn_Click"/>
        <Label x:Name="dnthvaccLabel" Content="Don't have account?" HorizontalAlignment="Left" Margin="48,226,0,0" VerticalAlignment="Top" Height="30" VerticalContentAlignment="Center"/>
        <Button x:Name="registerBtn" Content="Register" HorizontalAlignment="Left" Margin="185,226,0,0" VerticalAlignment="Top" Width="60" Height="30" Click="registerBtn_Click"/>

    </Grid>
</Window>
