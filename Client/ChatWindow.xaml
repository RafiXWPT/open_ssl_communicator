<Window x:Class="Client.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="ChatWindow" Height="346.023" Width="300" MaxHeight="350" MaxWidth="300" Icon="programIcon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200" MinHeight="150" MaxHeight="250"/>
            <RowDefinition Height="75" MinHeight="50" MaxHeight="100"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <ListBox x:Name="listBox" Grid.Row="0" HorizontalAlignment="Stretch" Margin="10,10,10,10" VerticalAlignment="Stretch" />
        <TextBox x:Name="chatText" Grid.Row="1" HorizontalAlignment="Stretch" Margin="10,10,10,10" TextWrapping="Wrap" Text="" VerticalAlignment="Stretch"/>
        <Button x:Name="button" Grid.Row="2" Content="sendMsg" HorizontalAlignment="Center" Margin="0,7,0,0" VerticalAlignment="Center" Width="75" Click="button_Click"/>

    </Grid>
</Window>
