<Window x:Class="Client.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="ChatWindow" Height="500" Width="400" MinWidth="300" MinHeight="300" Icon="programIcon.ico" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*" />
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>


        <ListBox x:Name="listBox" Grid.Row="0" HorizontalAlignment="Stretch" Margin="10,10,10,5" VerticalAlignment="Stretch"/>

        <TextBox x:Name="chatText" Grid.Row="1" HorizontalAlignment="Stretch" Margin="10,5,10,5" TextWrapping="Wrap" Text="" VerticalAlignment="Stretch"/>
        <Button x:Name="sendMsg" Grid.Row="2" Content="SEND" HorizontalAlignment="Stretch" Margin="10,5,10,5" VerticalAlignment="Stretch" Click="sendMsg_Click" IsDefault="True"/>

    </Grid>
</Window>
