<Window x:Class="Client.ResetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Crypto Talk - Reset password" Height="150" Width="260" ResizeMode="NoResize" Icon="../Image/programIcon.ico" WindowStartupLocation="CenterScreen" Background="#FFCDCDCD">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Label x:Name="EmailLabel" Content="Your email:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="EmailTextBox" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" Height="23" Margin="10,35,10,10" TextWrapping="NoWrap" Text="" VerticalAlignment="Top" />
        </Grid>

        <Button x:Name="ResetPassword" Grid.Row="1" Content="Reset" HorizontalAlignment="Stretch" Margin="10,5,10,10" VerticalAlignment="Top" Height="30" Click="ResetPwdBtn_Click"/>

    </Grid>
</Window>
